<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="title" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" size="40" class="input-large-text" default="" required="true" />
	</fieldset>

	<fieldset name="basic" label="COM_SPPAGEBUILDER_FIELDSET_BASIC">
		<field name="id" type="hidden" />
		<field name="text" id="sptext" type="hidden" filter="raw" />
	</fieldset>

	<fieldset name="pagecss" label="CSS">
		<field name="css" type="textarea" label="COM_SPPAGEBUILDER_FIELD_CSS" description="COM_SPPAGEBUILDER_FIELD_CSS_DESC" rows="5" cols="5" />
	</fieldset>

	<fieldset name="seosettings" label="COM_SPPAGEBUILDER_FIELDSET_SEOSETTINGS">
		<field name="og_title" type="text" label="COM_SPPAGEBUILDER_FIELD_OG_TITLE" hint="COM_SPPAGEBUILDER_FIELD_OG_TITLE_PLACEHOLDER" />
		<field name="og_image" type="spmedia" media_format="image" label="COM_SPPAGEBUILDER_FIELD_OG_IMAGE" />
		<field name="og_description" type="textarea" label="COM_SPPAGEBUILDER_FIELD_OG_DESC" description="COM_SPPAGEBUILDER_FIELD_OG_DESC_DESC" rows="5" cols="5" />
	</fieldset>

	<fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">

		<field name="catid" type="categoryedit" extension="com_sppagebuilder" label="COM_SPPAGEBUILDER_CATEGORY" description="COM_SPPAGEBUILDER_CATEGORY_DESC" addfieldpath="/administrator/components/com_categories/models/fields">
			<option value="0">COM_SPPAGEBUILDER_SELECT_CATEGORY</option>
		</field>

		<field name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" filter="intval" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_SPPAGEBUILDER_FIELD_LANGUAGE_DESC">
			<option value="*">JALL</option>
		</field>

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" />
		<field name="created_on" type="hidden" label="COM_SPPAGEBUILDER_FIELD_CREATED_LABEL" description="COM_SPPAGEBUILDER_FIELD_CREATED_DESC" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="created_by" type="hidden" label="COM_SPPAGEBUILDER_FIELD_CREATED_BY_LABEL" description="COM_SPPAGEBUILDER_FIELD_CREATED_BY_DESC" />
		<field name="modified" type="hidden" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" readonly="true" filter="unset" />
		<field name="modified_on" type="hidden" label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_CONTENT_FIELD_MODIFIED_DESC" size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="hits" type="hidden" label="JGLOBAL_HITS" description="COM_SPPAGEBUILDER_HITS_DESC" readonly="true" />
	</fieldset>
	<fieldset name="permissions" label="Permissions">
		<field name="asset_id" type="hidden" filter="unset" />
		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" filter="rules"
			component="com_sppagebuilder" section="page" validate="rules"
		/>
	</fieldset>
</form>
